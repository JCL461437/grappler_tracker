<!DOCTYPE html>
<html>
  <head>
    <title>GrapplerTracker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <!-- Navigation Bar -->
    <nav class="navbar">
      <div class="container">
        <div class="nav-left">
          <%= link_to image_tag('grappler_tracker_logo.jpeg', alt: 'Grappler Tracker Logo', class: 'nav-logo-img'), root_path %> <!-- Logo linked to home -->
          <%= link_to 'Grappler Tracker', root_path, class: 'nav-logo-text' %> <!-- Home link -->
        </div>

        <ul class="nav-links">
          <!-- Profile Link -->
          <% if current_user %> 
            <li><%= link_to 'Profile', user_path(current_user), class: 'nav-item' %></li>
          <% else %>
            <li><%= link_to 'Login', new_user_session_path, class: 'nav-item' %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path, class: 'nav-item' %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <!-- Content from views -->
    <%= yield %>
  </body>
</html>
