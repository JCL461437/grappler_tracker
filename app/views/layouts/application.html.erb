<!DOCTYPE html>
<html>
  <head>
    <title>GrapplerTracker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <!-- Navigation Bar -->
    <nav class="navbar">
      <div class="container">
        <div class="nav-left">
          <%= link_to image_tag('grappler_tracker_bc_logo.jpeg', alt: 'Grappler Tracker Logo', class: 'nav-logo-img'), root_path %> <!-- Logo linked to home -->
          <%= link_to 'Grappler Tracker', root_path, class: 'nav-logo-text' %> <!-- Home link -->
          <li><%= link_to 'Grapplers Grimoire', grimoire_path, class: 'nav-item' %></li> 
        </div>

        <!-- Put other nav bar section back eventually -->
      </div>
    </nav>

    <!-- Content from views -->
    <%= yield %>
  </body>
</html>
